<h1><%= @topic.name %></h1>

<div class="row">
   <div class="col-md-8">
     <p class="lead"><%= @topic.description %></p>
     <% @posts.each do |post| %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">
             <%= link_to (markdown_to_html post.title), [@topic, post] %>
           </h4>
     <% end %>
   </div>
  
 </div>
  </div>
</div>