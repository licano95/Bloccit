<h1>summary</h1>
<div>
     <h1>Enter a new summary</h1>
     <%= form_for [@post, @summary] do |f| %>
       <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :name, class: 'form-control', placeholder: "Enter summary title" %>
       </div>
       <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter summary" %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
</div>





